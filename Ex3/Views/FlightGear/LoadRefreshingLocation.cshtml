@{
    ViewBag.Title = "LoadRefreshingLocation";
}


<img id="airplane" src="~/Image/airplane.png" alt="airplane" style="position:absolute; height:25px; width:25px" ; />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<canvas id="myCanvas"></canvas>

<body>
    <script>
        // get Elements
        var airplane = document.getElementById("airplane");
        var canvas = document.getElementById("myCanvas");

        // Init canvas
        canvas.style.width = window.innerWidth;
        canvas.style.height = window.innerHeight;
        var ctx = canvas.getContext("2d");

        var Lon;
        var Lat;
        var x;
        var y;
        var i = 0;
        var EOF;

        Timer = (function () {
            $.post("@Url.Action("LoadFlightData")").done(function (xml) {
                i++;
                console.log("In timer: " + i);
                    var xmlDoc = $.parseXML(xml),
                        $xml = $(xmlDoc),
                        Lat = $xml.find("Lat").text();
                    Lon = $xml.find("Lon").text();
                EOF = $xml.find("EOF").text();
                if (EOF === "true") {
                    stopTimer();
                    alert("Finished");
                    return;
                }

                    $("#prodLon").text(Lon);
                    $("#prodLat").text(Lat);

                    x = (parseFloat(Lon) + 180) * (window.innerWidth / 360);
                    y = (parseFloat(Lat) + 90) * (window.innerHeight / 180);

                    airplane.style.top = y + "px";
                    airplane.style.left = x + "px";
            });
        });
        var setIntervalRetVal=setInterval(Timer, @Session["Time"] * 1000);
        function stopTimer() {
            clearInterval(setIntervalRetVal);
        }
        console.log("Time: "+ @Session["Time"]);
        Timer();
    </script>
</body>
