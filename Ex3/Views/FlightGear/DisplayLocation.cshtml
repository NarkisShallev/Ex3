@model Ex3.Models.DisplayLocation

@{
    ViewBag.Title = "DisplayLocation";
}

<img id="map" src="~/Image/map.png" alt="map" style="position:absolute; height:100%; width:100%"; />
<img  id="airplane" src="~/Image/airplane.png" alt="airplane" style="position:absolute; height:25px; width:25px"; />
<!canvas id="airplaneCanvas" style="position:absolute; height:100%; width:100%" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<body>
    <script>
        var map = document.getElementById("map");
        //var ctx = canvas.getContext("2d");
        var x = (@this.Model.displayUtils.Lon + 180) * (map.offsetWidth / 360);
        var y = (@this.Model.displayUtils.Lat + 90) * (map.offsetHeight / 180);
        document.getElementById("airplane").style.top = y + "px";
        document.getElementById("airplane").style.left = x + "px";
    </script>
</body>